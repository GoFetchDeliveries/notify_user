web notifications

<style type="text/css">
	.unread a{
		font-weight: bold;
	}
	.read a{
		font-weight: normal;
	}
</style>

<%= link_to 'Mark all as read', notify_user_notifications_mark_all_path %>

<ul id="notify-user-messages">
	<% @notifications.each do |notification| %>
		<%= notification.html_for_message %>
	<% end %>
</ul>